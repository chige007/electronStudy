{
  "name": "electronstudy",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --watch main.js --exec 'electron .'",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/chige007/electronStudy.git",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^21.2.0",
    "nodemon": "^2.0.2"
  },
  "build": {
    "appId": "electronStudy",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "background": "build/background.jpg",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 200,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 400
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-store": "^5.1.0"
  }
}
